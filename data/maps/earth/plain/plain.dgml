<?xml version="1.0" encoding="UTF-8"?>
<DeskGlobeML xmlns="http://deskglobe.kde.org/dgml/1.0">
	<MapStyle>
		<name>Plain Map</name>

		<prefix>plain</prefix>
		<icon>plain-preview.png</icon>

		<description>A plain map. It uses vector lines to mark coastlines and country borders etc. .</description>
		
		<layer type="vector" name="mwdbii"/>

        <OceanStyle>
            <color>#99b3cc</color>
        </OceanStyle>

        <LandStyle>
            <color>#f2efe9</color>
        </LandStyle>

        <CountryStyle>
            <border-color>#cccbca</border-color>
        </CountryStyle>

        <StateStyle>
            <border-color>#cccbca</border-color>
        </StateStyle>

        <LakeStyle>
            <color>#99b3cc</color>
        </LakeStyle>

        <RiverStyle>
            <color>#99b3cc</color>
        </RiverStyle>

		<LabelStyle>
			<color>#000000</color>
		</LabelStyle>

	</MapStyle>

    <legend>
        <section name="borders" checkable="true" spacing="12">
            <heading>Boundaries</heading>
            <item>
                <icon color="#cccbca" pixmap="bitmaps/border_1.png"/>
                <text>International</text>
            </item>
            <item>
                <icon color="#cccbca" pixmap="bitmaps/border_2.png"/>
                <text>State</text>
            </item>
        </section>

        <section name="waterbodies" checkable="true" spacing="12">
            <heading>Water Bodies</heading>
            <item>
                <icon color="#99b3cc" pixmap="bitmaps/lake.png"/>
                <text>Lake</text>
            </item>
            <item>
                <icon color="#99b3cc" pixmap="bitmaps/river.png"/>
                <text>River</text>
            </item>
        </section>

        <section name="surface" checkable="false" spacing="12">
            <heading>Surface</heading>
            <item>
                <icon color="#f2efe9"/>
                <text>Land</text>
            </item>
            <item>
                <icon color="#99b3cc"/>
                <text>Water</text>
            </item>
        </section>
    </legend>

</DeskGlobeML>
